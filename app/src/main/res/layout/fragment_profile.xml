<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/red_gradient"
    tools:context=".fragment.ProfileFragment">

    <TextView
        android:id="@+id/your_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/finger_paint"
        android:text="User Profile"
        android:textColor="@color/black"
        android:textSize="27sp"
        android:textStyle="bold" />

    <com.google.android.material.card.MaterialCardView
        android:layout_width="358dp"
        android:layout_height="246dp"
        android:layout_below="@+id/your_profile"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="31dp"
        android:layout_marginTop="123dp"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="228dp"
        android:background="@drawable/red_gradient">


        <TextView
            android:id="@+id/displayNameTxtView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/your_profile"
            android:layout_marginStart="30dp"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/poppins_light"
            android:gravity="start"
            android:padding="5dp"
            android:text="name"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/displayMobileNoTxtView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/displayNameTxtView"
            android:layout_marginStart="30dp"
            android:layout_marginTop="80dp"
            android:fontFamily="@font/poppins_light"
            android:gravity="start"
            android:padding="5dp"
            android:text="4567890"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/displayEmailTxtView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/displayMobileNoTxtView"
            android:layout_marginStart="30dp"
            android:layout_marginTop="120dp"
            android:fontFamily="@font/poppins_light"
            android:gravity="start"
            android:padding="5dp"
            android:text="abc@gmail.com"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/displayAddressTxtView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/displayEmailTxtView"
            android:layout_marginStart="30dp"
            android:layout_marginTop="160dp"
            android:fontFamily="@font/poppins_light"
            android:gravity="start"
            android:padding="5dp"
            android:text="address"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="normal" />


    </com.google.android.material.card.MaterialCardView>


</RelativeLayout>